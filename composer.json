{
    "name": "hypernode/deploy",
    "description": "Hypernode Deploy",
    "type": "application",
    "license": "proprietary",
    "bin": [
        "bin/hypernode-deploy.php",
        "bin/hypernode-deploy"
    ],
    "require": {
        "ext-json": "*",
        "ext-zlib": "*",
        "composer-runtime-api": "^2",
        "deployer/deployer": "^7.0",
        "deployer/recipes": "dev-master",
        "doctrine/annotations": "^1.6",
        "hypernode/deploy-configuration": "dev-master",
        "php-di/php-di": "^6.0",
        "psr/log": "^1.0",
        "sentry/sdk": "^2.0",
        "symfony/console": "^4.1",
        "symfony/finder": "^4.1",
        "symfony/http-client": "^4.4",
        "twig/twig": "^2.12"
    },
    "autoload": {
        "psr-4": {
            "Hypernode\\Deploy\\": "src/"
        },
        "files": [
            "src/Deployer/functions.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "roave/security-advisories": "dev-master"
    },
    "config": {
        "platform": {
            "php": "7.2"
        },
        "preferred-install": {
            "hypernode/*": "source"
        },
        "sort-packages": true
    }
}
